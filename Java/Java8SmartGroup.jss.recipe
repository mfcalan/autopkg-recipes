<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Description</key>
        <string>Keeps the JSS update smart group up to date.</string>
        <key>Identifier</key>
        <string>com.github.mfcalan.jss.Java8SmartGroup</string>
        <key>Input</key>
        <dict>
            <key>NAME</key>
            <string>Java 8</string>
            <key>PKG_ID</key>
            <string>com.oracle.jre</string>
            <key>CATEGORY</key>
            <string>PLUGINS-DRIVERS</string>
            <!--PlistReader w/o variable injection in AutoPkg requires this-->
            <key>version</key>
            <string/>
            <key>GROUP_NAME</key>
            <string>Autopkg: %NAME% - Needs update</string>
            <key>SECOND_GROUP_NAME</key>
            <string>Autopkg: %NAME% - Autoupdate</string>            
            <key>GROUP_TEMPLATE</key>
            <string>%RECIPE_DIR%/Java8SmartGroup.xml</string>
            <key>GROUP_TEMPLATE2</key>
            <string>%RECIPE_DIR%/JavaSmartGroupAutoUpdate.xml</string>                        
        </dict>
        <key>MinimumVersion</key>
        <string>0.4.0</string>
        <key>ParentRecipe</key>
        <string>com.github.autopkg.pkg.OracleJava8</string>
        <key>Process</key>
        <array>
            <dict>
                <key>Arguments</key>
                <dict>
                    <key>prod_name</key>
                    <string>%NAME%</string>
                    <key>category</key>
                    <string>%CATEGORY%</string>
                    <key>groups</key>
                    <array>
                        <dict>
                            <key>name</key>
                            <string>%GROUP_NAME%</string>
                            <key>smart</key>
                            <true/>
                            <key>template_path</key>
                            <string>%GROUP_TEMPLATE%</string>
                        </dict>
                        <dict>
                            <key>name</key>
                            <string>%SECOND_GROUP_NAME%</string>
                            <key>smart</key>
                            <true/>
                            <key>template_path</key>
                            <string>%GROUP_TEMPLATE2%</string>
                        </dict>
                    </array>
                    <key>extension_attributes</key>
                    <array>
                        <dict>
                            <key>name</key>
                            <string>OracleJavaVersion</string>
                            <key>ext_attribute_path</key>
                            <string>%RECIPE_DIR%/OracleJavaExtensionAttribute.xml</string>
                        </dict>
                    </array>
                </dict>
                <key>Processor</key>
                <string>JSSImporter</string>
            </dict>
        </array>
    </dict>
</plist>
