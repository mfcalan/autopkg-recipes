<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Description</key>
        <string>Keeps the JSS update smart group up to date.</string>
        <key>Identifier</key>
        <string>com.github.mfcalan.jss.SilverlightSmartGroup</string>
        <key>Input</key>
        <dict>
            <key>NAME</key>
            <string>Silverlight</string>
            <key>CATEGORY</key>
            <string>PLUGINS-DRIVERS</string>
            <key>GROUP_NAME</key>
            <string>Apps: %NAME% - Needs update</string>
            <key>GROUP_TEMPLATE</key>
            <string>%RECIPE_DIR%/SilverlightSmartGroup.xml</string>
        </dict>
        <key>MinimumVersion</key>
        <string>0.4.0</string>
        <key>ParentRecipe</key>
        <string>com.github.autopkg.pkg.Silverlight</string>
        <key>Process</key>
        <array>
            <!--The parent recipe results in a bundle-style package, which can be
            problematic for non-AFP repos; eventually fix to wrap in a flat-pkg
        -->
            <dict>
                <key>Arguments</key>
                <dict>
                    <key>prod_name</key>
                    <string>%NAME%</string>
                    <key>version</key>
					<string>%version%</string>
                    <key>category</key>
                    <string>%CATEGORY%</string>
                    <key>groups</key>
                    <array>
                        <dict>
                            <key>name</key>
                            <string>%GROUP_NAME% to %version%</string>
                            <key>smart</key>
                            <true/>
                            <key>template_path</key>
                            <string>%GROUP_TEMPLATE%</string>
                        </dict>
                    </array>
                    <key>extension_attributes</key>
                    <array>
                        <dict>
                            <key>name</key>
                            <string>SilverlightVersion</string>
                            <key>ext_attribute_path</key>
                            <string>%RECIPE_DIR%/SilverlightExtensionAttribute.xml</string>
                        </dict>
                    </array>
                </dict>
                <key>Processor</key>
                <string>JSSImporter</string>
            </dict>
        </array>
    </dict>
</plist>
